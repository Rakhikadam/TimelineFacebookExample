<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/first">

        <TextView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="facebook"
            android:textColor="@color/purple_700"
            android:textSize="50dp"></TextView>

        <ImageView
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:src="@mipmap/serach"
            android:layout_toRightOf="@+id/fb"

            ></ImageView>

        <ImageView
            android:id="@+id/text"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/search"
            android:src="@mipmap/msg"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Home"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Favorite"

            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Recent"
            android:textSize="20dp"></TextView>
    </LinearLayout>


    <ListView
        android:id="@+id/list"
        android:layout_above="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second"
        ></ListView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        >

    <ImageView
        android:id="@+id/home"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_home"></ImageView>

        <ImageView
            android:id="@+id/video"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_video"></ImageView>

        <ImageView
            android:id="@+id/person"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_people_all"></ImageView>

        <ImageView
            android:id="@+id/notification"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_notification"></ImageView>

        <ImageView
            android:id="@+id/line"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_line"></ImageView>

    </LinearLayout>



</RelativeLayout>

