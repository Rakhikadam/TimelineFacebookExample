<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personList">


    <ImageView
        android:id="@+id/friendimg"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_profile2"
        ></ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="90dp"
        android:text="AAAAAAAAA"
        android:paddingTop="10dp"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/mutual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mutual friends"
        android:layout_below="@+id/name"
        android:textSize="20dp"
        android:paddingLeft="150dp"
        ></TextView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/mutual"
        android:paddingRight="10dp"
        android:layout_marginLeft="120dp"
        android:text="Confirm"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mutual"></Button>


</RelativeLayout>